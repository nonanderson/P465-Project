<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles.css">
    <title>Create an account</title>

</head>

<body>
    <!-- Registration form -->

    <div class="register-container">
        <form action=" /registration" method="POST">
            <h1>Create an account</h1>
            <div class="form-group">
                
                <input type="firstName" id="firstName" name="firstName" class="form-control"
                    placeholder="Enter First Name" {{#if firstName}} value={{firstName}} {{/if}} />
                    <label for="firstName">First Name</label>
            </div>
            <div class="form-group">
                
                <input type="lastName" id="lastName" name="lastName" class="form-control" placeholder="Enter Last Name"
                    {{#if lastName}} value={{lastName}} {{/if}} />
                    <label for="lastName">Last Name</label>
            </div>
            <div class="form-group">
                
                <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" {{#if email}}
                    value={{email}} {{/if}} />
                    <label for="email">Email</label>
            </div>
            <div class="form-group">
                
                <input type="password" id="password" name="password" class="form-control"
                    placeholder="Create Password" />
                    <label for="password">Password</label>
            </div>
            <div class="form-group">
                
                <input type="password" id="password2" name="password2" class="form-control"
                    placeholder="Confirm Password" />
                    <label for="password2">Confirm Password</label>
            </div>
            <button type="submit" class="register-button">
                Register
            </button>
        </form>

        <hr size="2" width="90%" color=#0c7742>

        <!-- Google Button -->
        <div class="google-option">
            <a href="/auth/google" class="google-button">
                <i class="fab fa-google left"></i> Register With Google
            </a>
        </div>

    </div>



</body>

</html>